<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <!--    设置圆角-->
            <corners android:radius="10dp"/>
            <!--    设置边框-->
            <stroke
                android:width="1dp"
                android:color="@color/dayBlackNightGray"/>
            <solid
                android:color="@color/btnPressedBackgroundColor"/>
        </shape>
    </item>
    <item android:state_pressed="false" >
        <shape>
            <!--    设置圆角-->
            <corners android:radius="10dp"/>
            <!--    设置边框-->
            <stroke
                android:width="1dp"
                android:color="@color/dayBlackNightGray"/>
        </shape>
    </item>
</selector>