<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/nested"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <!--WebView-->
        <com.example.rssreader.comments.ShowArticleWebView
            android:id="@+id/web_View"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fillViewport="true" />

        <!--两条评论-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/date_first"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ohhhh" />
            <TextView
                android:id="@+id/comment_first"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="该评论空空如也，说点什么吧" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/date_second"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ohhhh" />
            <TextView
                android:id="@+id/comment_second"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="该评论空空如也，说点什么吧" />
        </LinearLayout>

        <!--全部评论和局部评论打开按钮-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/show_allcomments"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="SHOWALLCOMMENT" />

            <Button
                android:id="@+id/show_partcomments"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="PARTCOMMENT" />
        </LinearLayout>
    </LinearLayout>

</androidx.core.widget.NestedScrollView>